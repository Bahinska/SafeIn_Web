@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model SafeIn_mvs_test.ViewModels.LoginViewModel
@using Microsoft.Extensions.Localization;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-3 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            @using (Html.BeginForm("LoginPostAsync", "UserManagement", FormMethod.Post))
                            {
                            <h2 class="fw-bold mb-2 text-uppercase">@localizer["Login"]</h2>
                                <p class="text-white-50 mb-5">@localizer["Enter log and pass"]</p>

                                <div class="form-outline form-white mb-4">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = @localizer["Email"].Value, required = "required"})
                            </div>

                            <div class="form-outline form-white mb-4">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password", placeholder = @localizer["Password"].Value, required = "required"})
                            </div>
                                <button class="btn btn-outline-light btn-lg px-5" type="submit">@localizer["Login"]</button>
                                if (TempData["errorLoginMessage"] != null)
                                {
                                    <div class="alert alert-danger">@localizer["LoginError"]</div>
                                }
@*                              
                            <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>

                            </div>*@
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

