@model SafeIn_mvs_test.ViewModels.CreateAdminViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/create_user.css" asp-append-version="true" />


<div class="new_admin_fields">
    <div class="new_admin_title">
        <h2>@localizer["NewAdmin"]</h2>
        @if (TempData["SuccessMessageAdminCreate"] != null)
        {
            <div class="create_success">@localizer["SuccessMessageAdminCreate"]</div>
        }
        @if (TempData["CreateAdminError"] != null)
        {
            <div class="create_error">@localizer["CreateAdminError"]</div>
        }
    </div>

    @using (Html.BeginForm("CreateAdminAsync", "SuperAdmin", FormMethod.Post))
    {
        <div class="InputField">
            @Html.TextBoxFor(m => m.companyName, new { @class = "form-control", type = "userName", placeholder = @localizer["Company"].Value, required = "required"})
            @Html.ValidationMessageFor(m => m.companyName, "", new { @class = "error" })
        </div>
        <div class="InputField">
            @Html.TextBoxFor(m => m.userName, new { @class = "form-control", type = "userName", placeholder = @localizer["UserName"].Value, required = "required"})
            @Html.ValidationMessageFor(m => m.userName, "", new { @class = "error" })
        </div>
        <div class="InputField">
            @Html.TextBoxFor(m => m.email, new { @class = "form-control", type = "email", placeholder = @localizer["Email"].Value, required = "required"})
            @Html.ValidationMessageFor(m => m.email, "", new { @class = "error" })
        </div>
        <div class="InputField">
            @Html.TextBoxFor(m => m.password, new { @class = "form-control",type = "password", placeholder = @localizer["Password"].Value})
            @Html.ValidationMessageFor(m => m.password, "", new { @class = "error" })
        </div>
        <div class="InputField">
            @Html.TextBoxFor(m => m.confirmPassword, new { @class = "form-control",type = "password", placeholder = @localizer["ConfirmPassword"].Value})
            @Html.ValidationMessageFor(m => m.confirmPassword, "", new { @class = "error" })
        </div>


        <div class="SubmitButton">
            <button type="submit">@localizer["Submit"]</button>
        </div>
       
        <a href="/SuperAdmin/Index" role="button">
            <div class="CancelButton">
                <p>@localizer["Cancel"]</p>
            </div>
        </a>
    }
</div>